    "watchify":    "^2.1.1",
    "coffeeify":   "1.0.0",
    "envify":      "^3.0.0",
    "uglify-js":   "~2.4.15",
    "jest-cli":    "~0.1.17"
  },

  "scripts": {
    "start": "watchify -o bin/bundle.js -v -d .",
